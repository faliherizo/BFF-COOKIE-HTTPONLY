{
  "name": "bff-network",
  "private": true,
  "version": "1.0.0",
  "description": "Express.js BFF with Keycloak authentication",
  "type": "module",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./lib/esm/index.d.ts",
        "default": "./lib/esm/index.js"
      },
      "require": {
        "types": "./lib/cjs/index.d.ts",
        "default": "./lib/cjs/index.js"
      }
    }
  },
  "files": [
    "lib",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "start": "node lib/esm/index.js",
    "start:production": "cross-env NODE_ENV=production node lib/esm/index.js",
    "dev": "nodemon --exec 'node --import tsx --no-warnings' src/index.ts",
    "clean": "rimraf dist lib",
    "build:esm": "tsc -p tsconfig.esm.json",
    "build:cjs": "tsc -p tsconfig.cjs.json",
    "build:types": "tsc -p tsconfig.types.json",
    "build:bundle": "rollup -c",
    "copy:env": "node -e \"require('fs').copyFileSync('.env.example','lib/.env.example')\"",
    "build": "yarn clean && yarn build:esm && yarn build:cjs && yarn build:types && yarn build:bundle && yarn copy:env"
  },
  "keywords": [
    "backend",
    "express",
    "keycloak",
    "oauth2",
    "oidc"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@faker-js/faker": "^9.4.0",
    "connect-redis": "^8.0.1",
    "cookie-session": "^2.1.0",
    "cors": "^2.8.5",
    "dotenv-safe": "^9.1.0",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "ioredis": "^5.5.0",
    "morgan": "^1.10.0",
    "passport-keycloak-oauth2-oidc-portable": "^2.6.1",
    "tslib": "^2.8.1",
    "winston": "^3.17.0",
    "winston-transport": "^4.9.0"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.26.7",
    "@eslint/eslintrc": "^3.2.0",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-typescript": "^12.1.2",
    "@types/cors": "^2.8.17",
    "@types/dotenv-safe": "^8.1.6",
    "@types/ejs": "^3.1.5",
    "@types/eslint": "^9.6.1",
    "@types/express": "^5.0.0",
    "@types/express-session": "^1.18.1",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.1",
    "@types/passport": "^1.0.17",
    "@types/passport-oauth2": "^1.4.17",
    "@types/redis": "^4.0.11",
    "@types/yargs": "^17.0.33",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "axios": "^1.7.9",
    "cross-env": "^7.0.3",
    "ejs": "^3.1.10",
    "eslint": "^9.19.0",
    "eslint-plugin-jest": "^28.11.0",
    "globals": "^15.14.0",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "nodemon": "^3.1.9",
    "openid-client": "^6.1.7",
    "passport": "^0.7.0",
    "passport-oauth2": "^1.8.0",
    "rimraf": "^6.0.1",
    "rollup": "^4.34.6",
    "rollup-plugin-dts": "^6.1.1",
    "ts-jest": "^29.2.5",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "winston-daily-rotate-file": "^5.0.0",
    "yargs": "^17.7.2"
  }
}
